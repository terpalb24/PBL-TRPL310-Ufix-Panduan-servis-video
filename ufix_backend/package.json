{
  "name": "Ufix",
  "version": "1.0.0",
  "description": "streaming app",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit --verbose",
    "test:integration": "NODE_ENV=test jest tests/integration --verbose",
    "test:feature": "jest tests/Feature --verbose",
    "test:integration:tag": "NODE_ENV=test jest tests/integration/tagIntegrationTest.test.js --verbose",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:feature",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node app.js",
    "dev": "nodemon app.js"
    
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "routes/**/*.js"
    ]
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.561.0",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "nodemon": "^3.1.9"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  }
}
